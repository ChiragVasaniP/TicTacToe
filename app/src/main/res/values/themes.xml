<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TicTacToe" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowBackground">#1C1C1C</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:statusBarColor">@color/colorPlayerBackground</item>
        <item name="android:navigationBarColor">@color/colorPlayerBackground</item>
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.TicTacToe" parent="Base.Theme.TicTacToe" />

    <style name="TextBase">
        <item name="android:textColor">@color/white</item>
        <item name="android:letterSpacing">0</item>
        <item name="lineSpacing">0.5dp</item>
    </style>

    <style name="TextHeader.RobotoBold" parent="TextBase">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextHeader2.RobotoBold" parent="TextBase">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Body1M.Roboto1Medium" parent="TextBase">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="SubTitle2.RobotoRegular" parent="TextBase">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">16sp</item>
    </style>


</resources>